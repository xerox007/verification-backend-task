{
  "name": "verification-backend-task",
  "version": "1.0.0",
  "description": "Verification Backend Task",
  "scripts": {
    "start": "node dist",
    "prestart": "yarn build",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "prettier": "prettier --write **/*.{js,json,yml,md}",
    "build": "rimraf dist && babel src --copy-files --out-dir dist --source-maps",
    "start:dev": "nodemon --watch .env --watch src --exec babel-node src --source-maps",
    "test": "cross-env NODE_ENV=test mocha --exit --recursive --require @babel/register test",
    "test:coverage": "cross-env NODE_ENV=test nyc --require @babel/register --reporter lcov --reporter text mocha --exit --recursive test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,yml,yml,json}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "javascript",
    "node",
    "express",
    "es6",
    "api"
  ],
  "private": true,
  "author": "Bidhan Sthapit <bdhn.2008@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/joi": "^17.1.1",
    "@sentry/node": "^5.29.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.3.1",
    "http-status-codes": "^2.1.4",
    "lodash": "^4.17.20",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "serve-favicon": "^2.5.0",
    "swagger-jsdoc": "^6.0.0",
    "swagger-ui-dist": "^3.38.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "chai": "^4.2.0",
    "codecov": "^3.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-config-leapfrog": "^3.0.0",
    "eslint-config-prettier": "^7.1.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1"
  },
  "engines": {
    "node": ">= 12.13.0",
    "npm": ">= 6.12.0",
    "yarn": ">= 1.20.0"
  }
}
